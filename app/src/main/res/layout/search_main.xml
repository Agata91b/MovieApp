<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="agata91bcomgithub.movieapp.search.SearchActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/header_poster"
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/search_button">

        <android.support.design.widget.TextInputEditText

            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/what_are_you_looking_for"
            android:lines="1" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_below="@+id/header_poster"
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/ic_search" />

    <CheckBox
        android:id="@+id/year_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_layout"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Z roku: " />

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year_checkbox"
        android:layout_marginLeft="26dp"
        android:visibility="invisible">

    </NumberPicker>

    <CheckBox
        android:id="@+id/type_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_input_layout"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="typu: " />

    <RadioGroup
        android:visibility="invisible"
        android:id="@+id/radio_group"
        android:layout_below="@id/type_checkbox"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_movies"
            android:text="Filmy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_series"
            android:text="Seriale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_games"
            android:text="Gry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_episodes"
            android:text="Odcinki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

</RelativeLayout>