<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agata91bcomgithub.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listing.ListingActivity"
            android:label="MovieList" />
        <activity
            android:name=".details.DetailsActivity"
            android:label="Movie Details" />
        <activity android:name=".details.gallery.GalleryActivity"
            android:label="Movie Gallery"
            ></activity>
    </application>

</manifest>